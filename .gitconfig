[user]
	name = MikimotoH
	email = MikimotoH@gmail.com
[credential]
	helper = cache --timeout=36000000
[color]
	ui = true
[push]
	default = matching
[core]
	editor = nvim
	autocrlf = input
	eol = lf	
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff

[mergetool "nvim"]
        cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[difftool]
	prompt = false
[alias]
	d = difftool
